
@{
    ViewBag.Title = "ProcessKYC";
    Layout = "~/Views/Shared/_Portal.cshtml";
    var User = ViewBag.User;
}

@section Styles {
    <link rel="stylesheet" href="~/Content/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Content/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Content/buttons.bootstrap4.min.css">
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h4>Manage FICA (KYC)</h4>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">Management</li>
                    <li class="breadcrumb-item active">Manage FICA (KYC)</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 mx-auto">
                <div class="card card-primary shadow">
                    <div class="card-body">
                        <table id="ProcessKYCTable" class="table table-bordered table-striped display nowrap" width="100%">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Name</th>
                                    <th>Surname</th>
                                    <th>Email</th>
                                    <th>Document Type</th>
                                    <th>Document Number</th>
                                    <th>KYC OTP</th>
                                    <th>Manage</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>


<!--Modals-->
<div class="modal fade" id="KYCDocsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div id="KYCDocsCarousel" class="carousel slide" data-interval="false">
                    <input id="KYCID" type="hidden" />
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" id="Selfie" src="" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" id="IDDoc" src="" alt="Second slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#KYCDocsCarousel" style="color:black" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#KYCDocsCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="modal-footer mx-auto">
                <button type="button" Onclick="ProcessKYC(2)" class="btn btn-danger" data-dismiss="modal">Reject</button>
                <button type="button" Onclick="ProcessKYC(1)" class="btn btn-success">Approve</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap4.min.js"></script>
    <script src="~/Scripts/dataTables.responsive.min.js"></script>
    <script src="~/Scripts/responsive.bootstrap4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js" integrity="sha512-qTXRIMyZIFb8iQcfjXWCO8+M5Tbc38Qi5WzdPOYZHIlZpzBHG3L3by84BBBOiRGiEb7KKtAOAs5qYdUiZiQNNQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>
        $(document).ready(function () {

            GetKYC();

            $(function () {
                $("#ProcessKYCTable").DataTable({
                    "responsive": true, "lengthChange": false, "autoWidth": false,
                });
            });
        });
    </script>

}
